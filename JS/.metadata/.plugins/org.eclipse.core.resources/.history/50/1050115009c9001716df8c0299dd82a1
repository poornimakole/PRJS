    $(document).ready(function(){
	   $("#empid").blur(function(){
		   var  empid=$("#empid").val();
		   var url="requestProcessorXML.jsp";
		   $.ajax({
			   type:"POST",
			   url:url,
			   data:{
				   empid:$("#playerno").val();
			   }
			   success:function(response){
				   console.log(response);
				   $(response).find("data").each(function(){
					   $("#name").val($(this).find('name').text());
					   $("#company").val($(this).find('company').text());
				   });
				   
				  
			   }
		   })
	   })
   })
</script>
